@using EntityLayer.Concrete
@model UserTable
@{
    ViewData["Title"] = "Giriş";
    Layout = "";
}
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Sayfası</title>
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <style>
        .check-icon:before {
            content: "\2713";
            color: #4bb505;
            font-size: 18px;
            font-weight: bold;
            margin-right: 5px;
        }
        .text-danger {
            color: red !important;
        }
    </style>
    <div class="wrapper">
        <h2>Giriş Yap</h2>
        <form method="post" action="/Account/Login">
            <div class="input-box">
                <input asp-for="UserName" type="text" placeholder="Kullanıcı adınız..." required>
            </div>
            <div class="input-box">
                <input asp-for="Password" type="password" placeholder="Parolanız..." required>
            </div>
            @Html.ValidationMessage("BadPass", new { @class = "text-danger" })
            <div class="input-box button">
                <input type="Submit" value="Giriş Yap">
            </div>
            <div class="text">

                @if (ViewBag.SuccessMessage != null)
                {
                    <h3><span class="check-icon"></span> @ViewBag.SuccessMessage</h3>
                }
                else
                {
                    <h3>Üyeliğin yok mu? Hemen <a href="/Account/Register">Kayıt Ol</a></h3>
                }
            </div>
        </form>
        
    </div>
    </body>
</html>
